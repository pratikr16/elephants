  author = {Mitchell, Duncan and Snelling, Edward P. and Hetem, Robyn S. and Maloney, Shane K. and Strauss, Willem Maartin and Fuller, Andrea},
  date = {2018-07-01},
  journaltitle = {Journal of Animal Ecology},
  volume = {87},
  pages = {956--973},
