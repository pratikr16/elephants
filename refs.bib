@article{shrestha2012a,
  title = {Body Temperature Variation of {{South African}} Antelopes in Two Climatically Contrasting Environments},
  author = {Shrestha, A. K. and family=Wieren, given=S. E., prefix=van, useprefix=true and family=Langevelde, given=F., prefix=van, useprefix=true and Fuller, A. and Hetem, R. S. and Meyer, L. C.R. and family=Bie, given=S., prefix=de, useprefix=true and Prins, H. H.T.},
  date = {2012},
  journaltitle = {Journal of Thermal Biology},
  volume = {37},
  pages = {171--178},
  issn = {03064565},
  doi = {10.1016/j.jtherbio.2011.12.008},
  url = {http://www.sciencedirect.com/science/article/pii/S0306456511001811},
  abstract = {To understand the adaptive capacity of a species in response to rapid habitat destruction and climate change, we investigated variation in body temperature (Tb) of three species of antelope, namely eland, blue wildebeest and impala, using abdominally-implanted temperature data loggers. The study was conducted at two climatically contrasting environments in South Africa, one with a less seasonal and mild winter (Mapungubwe National Park) and the other with a more seasonal, long and cold winter (Asante Sana Game Reserve). Since the habitat with long and cold winters would be suboptimal for these African antelopes, which evolved in less seasonal and hot environments, antelopes in Asante Sana were expected to exhibit a larger amplitude in Tband a lower minimum body temperature (MinTb) during winter to reduce Tband the ambient temperature (Tb-Ta) gradient to save energy. In both eland and impala, 24-h body temperature amplitude did not differ between the study sites, regardless of season. Conversely, wildebeest in Mapungubwe showed a higher variability in the 24-h amplitude of body temperature and also a lower MinTbduring winter and spring than the wildebeest in Asante Sana. This variation in Tbamong Mapungubwe wildebeest was influenced by both the amplitude of ambient temperature (positive) and cumulative rainfall (negative), which was not the case for wildebeest in Asante Sana. We propose that the low MinTbof wildebeest in Mapungubwe was the result of nutritional stress during winter and spring; an evident response even during a year of average rainfall. Therefore, these wildebeest apparently live in a physiologically stressful environment. With the predicted increase in the frequency and intensity of drought periods in southern Africa, wildebeest and other grazers, will likely experience greater nutritional stress in the future. \textcopyright{} 2011 Elsevier Ltd.},
  keywords = {Body temperature,Heterothermy,Macro-physiology,Nutritional stress,Physiological plasticity homeothermy},
  number = {3}
}

@article{shrestha2014,
  title = {Larger Antelopes Are Sensitive to Heat Stress throughout All Seasons but Smaller Antelopes Only during Summer in an {{African}} Semi-Arid Environment},
  author = {Shrestha, A. K. and family=Wieren, given=S. E., prefix=van, useprefix=true and family=Langevelde, given=F., prefix=van, useprefix=true and Fuller, A. and Hetem, R. S. and Meyer, L. and family=Bie, given=S., prefix=de, useprefix=true and Prins, H. H.T.},
  date = {2014-01},
  journaltitle = {International Journal of Biometeorology},
  volume = {58},
  pages = {41--49},
  issn = {00207128},
  doi = {10.1007/s00484-012-0622-y},
  url = {https://doi.org/10.1007/s00484-012-0622-y},
  abstract = {Heat stress can limit the activity time budget of ungulates due to hyperthermia, which is relevant for African antelopes in ecosystems where temperature routinely increases above 40 \textdegree{}C. Body size influences this thermal sensitivity as large bodied ungulates have a lower surface area to volume ratio than smaller ungulates, and therefore a reduced heat dissipation capacity. We tested whether the activity pattern during the day of three antelope species of different body size\textemdash{}eland, blue wildebeest and impala\textemdash{}is negatively correlated with the pattern of black globe tem- perature (BGT) during the day of the ten hottest days and each season in a South African semi-arid ecosystem. Fur- thermore, we tested whether the larger bodied eland and wildebeest are less active than the smaller impala during the hottest days and seasons. Our results show that indeed BGT was negatively correlated with the diurnal activity of eland, wildebeest and impala, particularly during summer. During spring, only the activity of the larger bodied eland and wildebeest was negatively influenced by BGT, but not for the smallest of the three species, the impala. We argue that spring, with its high heat stress, coupled with poor forage and water availability, could be critical for survival of these large African antelopes. Our study contributes to understanding how endothermic animals can cope with extreme climatic conditions, which are expected to occur more frequently due to climate change.},
  eprint = {23417331},
  eprinttype = {pmid},
  keywords = {Activity pattern,Body size,Diurnal,Heat stress,Nocturnal,Thermoregulation},
  number = {1}
}

