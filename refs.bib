@article{weissenbock2012,
  title = {Taking the Heat: {{Thermoregulation}} in {{Asian}} Elephants under Different Climatic Conditions},
  author = {Weissenb\"ock, Nicole M. and Arnold, Walter and Ruf, Thomas},
  date = {2012-02},
