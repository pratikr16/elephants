@article{boettiger2011,
  title = {Inferring Ecological and Behavioral Drivers of {{African}} Elephant Movement Using a Linear Filtering Approach},
  author = {Boettiger, Alistair N. and Wittemyer, George and Starfield, Richard and Volrath, Fritz and Douglas-Hamilton, Iain and Getz, Wayne M.},
  date = {2011},
  journaltitle = {Ecology},
  volume = {92},
  pages = {1648--1657},
  issn = {00129658},
