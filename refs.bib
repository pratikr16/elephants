  doi = {10.1093/conphys/cow044},
  url = {https://academic.oup.com/conphys/article-lookup/doi/10.1093/conphys/cow044},
  abstract = {Most of southern Africa's elephants inhabit environments where environmental temperatures exceed body temperature, but we do not know how elephants respond to such environments. We evaluated the relationships between apparent thermoregulatory behaviour and environmental, skin and core temperatures for tame savanna elephants (Loxodonta afri-cana) that were free-ranging in the hot parts of the day, in their natural environment. Environmental temperature dictated elephant behaviour within a day, with potential consequences for fine-scale habitat selection, space use and foraging. At black globe temperatures of {$\sim$}30\textdegree{}C, elephants adjusted their behaviour to reduce environmental heat load and increase heat dissipation (e.g. shade use, wetting behaviour). Resting, walking and feeding were also influenced by environmental temperature. By relying on behavioural and autonomic adjustments, the elephants maintained homeothermy, even at environmental temperatures exceeding 40\textdegree{}C. Elephants clearly have the capacity to deal with extreme heat, at least in environments with adequate resources of forage, water and shade. Future conservation actions should provide for the thermoregulatory, resource and spatial needs of elephants.},
  file = {/home/pratik/Zotero/storage/872C43RF/Mole et al. - 2016 - Coping with heat behavioural and physiological responses of savanna elephants in their natural habitat.pdf;/home/pratik/Zotero/storage/XRH7Q5V4/Mole et al. - 2016 - Coping with heat behavioural and physiological responses of savanna elephants in their natural habitat(2).pdf},
  number = {1}
}

@article{mole2018,
  title = {Savanna Elephants Maintain Homeothermy under {{African}} Heat},
  author = {Mole, Michael A. and D\'Araujo, Shaun Rodrigues and family=Aarde, given=Rudi J, prefix=van, useprefix=true and Mitchell, Duncan and Fuller, Andrea},
  date = {2018-07-14},
  journaltitle = {Journal of Comparative Physiology B},
