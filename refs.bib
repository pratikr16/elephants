@article{delsink2013,
  title = {{{LACK OF SPATIAL AND BEHAVIORAL RESPONSES TO IMMUNOCONTRACEPTION APPLICATION IN AFRICAN ELEPHANTS}} ( \textbackslash{}textlessi\textbackslash{{textgreaterLOXODONTA AFRICANA}}\textbackslash{}textless/I\textbackslash{}textgreater )},
  author = {Delsink, Audrey K. and Kirkpatrick, Jay and family=Altena, given=JJ., prefix=van, useprefix=true and Bertschinger, Henk J. and Ferreira, Sam M. and Slotow, Robert},
  date = {2013-12},
  journaltitle = {Journal of Zoo and Wildlife Medicine},
  volume = {44},
