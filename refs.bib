@article{wato2016,
  title = {Prolonged Drought Results in Starvation of {{African}} Elephant {\emph{(}}{{{\emph{Loxodonta}}}}{\emph{ Africana)}}},
  author = {Wato, Yussuf A. and Heitk\"onig, Ignas M. A. and family=Wieren, given=Sipke E., prefix=van, useprefix=true and Wahungu, Geoffrey and Prins, Herbert H. T. and family=Langevelde, given=Frank, prefix=van, useprefix=true},
  date = {2016-11-01},
  journaltitle = {Biological Conservation},
  shortjournal = {Biological Conservation},
