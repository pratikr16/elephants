@article{schmidt2016,
  title = {Ungulate Movement in an Extreme Seasonal Environment: Year-Round Movement Patterns of High-Arctic Muskoxen},
  author = {Schmidt, Niels M. and family=Beest, given=Floris M., prefix=van, useprefix=true and Mosbacher, Jesper B. and Stelvig, Mikkel and Hansen, Lars H. and Nabe-Nielsen, Jacob and Gr\o{}ndahl, Carsten},
  date = {2016},
