}

@article{tsai2018,
  title = {Mapping {{Vegetation}} and {{Land Use Types}} in {{Fanjingshan National Nature Reserve Using Google Earth Engine}}},
  author = {Tsai, Yu Hsin and Stow, Douglas and Chen, Hsiang Ling and Lewison, Rebecca and An, Li and Shi, Lei},
